{
  "name": "coversy",
  "version": "1.0.0",
  "description": "Instructor shift scheduling, shift exchange, and payroll management system.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kito0/coversy.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kito0/coversy/issues"
  },
  "homepage": "https://github.com/kito0/coversy#readme",
  "scripts": {
    "start": "lerna run start",
    "dev": "lerna run dev",
    "install": "lerna bootstrap",
    "new-version": "lerna version --conventional-commits --yes",
    "test": "lerna test",
    "diff": "lerna diff",
    "pretty": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "doc": "jsdoc -c ./jsdoc.json",
    "changelog": "changelog generate -a"
  },
  "lint-staged": {
    "*.js": [
      "npm run pretty",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "clean-jsdoc-theme": "^3.3.4",
    "generate-changelog": "^1.8.0",
    "husky": "^7.0.4",
    "jsdoc": "^3.6.10",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5"
  }
}
