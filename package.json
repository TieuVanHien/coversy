{
    "name": "coversy",
    "version": "1.0.0",
    "description": "Instructor shift scheduling, shift exchange, and payroll management system.",
    "main": "index.js",
    "scripts": {
        "i-cli": "npm i -g jsdoc npm-run-all nodemon sass pm2",
        "install:base": "npm install",
        "install:server": "cd ./server && npm install",
        "install:client": "cd ./client && npm install",
        "i-all": "run-p install:*",
        "start:server": "npm --prefix ./server start",
        "start:client": "npm --prefix ./client start",
        "s-all": "run-p start:*",
        "dev:server": "npm --prefix ./server run dev",
        "dev:client": "npm --prefix ./client start",
        "d-all": "run-p dev:*",
        "doc": "jsdoc -c ./jsdoc.json",
        "changelog": "changelog generate -a"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kito0/coversy.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/kito0/coversy/issues"
    },
    "homepage": "https://github.com/kito0/coversy#readme",
    "devDependencies": {
        "clean-jsdoc-theme": "^3.3.4",
        "generate-changelog": "^1.8.0",
        "jsdoc": "^3.6.10",
        "npm-run-all": "^4.1.5"
    }
}
